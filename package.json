{
  "name": "cascade-mcp",
  "version": "1.1.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start-local": "node --import ./loader.mjs server/server.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest test/e2e --testTimeout=600000 --runInBand --testMatch='**/test/e2e/**/*.test.ts'",
    "test:e2e:rest-api": "jest test/e2e/api-workflow.test.ts --testTimeout=600000 --runInBand --testMatch='**/test/e2e/**/*.test.ts'",
    "test:e2e:mcp-sdk:mock": "TEST_USE_MOCK_ATLASSIAN=true jest specs/mcp-sdk --testTimeout=30000 --runInBand --testMatch='**/specs/**/*.test.js' --testMatch='**/specs/**/*.test.ts' --testPathIgnorePatterns='/node_modules/'",
    "validate-pat-tokens": "node --import ./loader.mjs scripts/validate-pat-tokens.ts"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^3.0.62",
    "@ai-sdk/anthropic": "^2.0.50",
    "@ai-sdk/deepseek": "^1.0.10",
    "@ai-sdk/google": "^1.0.19",
    "@ai-sdk/groq": "^1.0.8",
    "@ai-sdk/mistral": "^1.0.11",
    "@ai-sdk/openai": "^1.0.10",
    "@ai-sdk/xai": "^1.0.6",
    "@anthropic-ai/sdk": "^0.68.0",
    "@atlaskit/adf-schema": "^50.2.3",
    "@atlaskit/editor-markdown-transformer": "^5.16.5",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@sentry/node": "^8.51.0",
    "@sentry/profiling-node": "^8.51.0",
    "ai": "^5.0.104",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eventsource": "^4.0.0",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "jose": "^6.0.12",
    "marklassian": "^1.0.4",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "otpauth": "^9.3.6",
    "tmp-promise": "^3.0.3",
    "undici": "^6.19.5",
    "undici-types": "^6.19.5",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-cloudwatch": "^6.3.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "commander": "^12.1.0",
    "husky": "^9.1.4",
    "jest": "^30.1.2",
    "open": "^10.2.0",
    "openid-client": "^5.7.1",
    "prettier": "3.5.3",
    "semver": "^7.6.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/server/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/specs/"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.jest.json"
        }
      ],
      "^.+\\.js$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.jest.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@modelcontextprotocol|node-fetch|marklassian|marked|jose)/)"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "server/**/*.{js,ts}",
      "!server/**/*.d.ts",
      "!server/**/*.test.{js,ts}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/specs/shared/config/jest-setup.js"
    ]
  }
}
